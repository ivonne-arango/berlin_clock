        assert  berlinClock("00:45:00") == ("OOOO\nOOOO\nYYRYYRYYROO")

#Test for minuts 55 minutes
def test_minutes_55():
        assert  berlinClock("10:55:00") == ("RROO\nOOOO\nYYRYYRYYRYY")


